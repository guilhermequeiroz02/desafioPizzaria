<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393737"
    tools:context="Activitys.MainActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/white"
        android:paddingLeft="39dp"
        android:paddingTop="74dp"
        android:paddingRight="39dp"
        android:paddingBottom="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="22dp"/>

    <EditText
        android:id="@+id/etUser"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:hint="UsuÃ¡rio"
        android:inputType="textEmailAddress"
        android:background="@drawable/shape"
        android:foregroundTint="@color/black"
        android:textColorHint="#7E7E8B"
        android:paddingLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvEnter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:ems="10"
        android:hint="Senha"
        android:inputType="numberPassword"
        android:foregroundTint="@color/black"
        android:textColorHint="#7E7E8B"
        android:background="@drawable/shape"
        android:paddingLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/etUser"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btEnter"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:backgroundTint="#7AC64F"
        android:text="Entrar"
        android:layout_marginTop="55dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
