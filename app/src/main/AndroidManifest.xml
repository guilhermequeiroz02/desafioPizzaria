<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.desafiopizzaria">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DesafioPizzaria">
        <activity android:name="Activitys.FinishOrder"></activity>
        <activity android:name="Activitys.OrderCorfirm" />
        <activity
            android:name="Activitys.ChoosePizza"
            android:label="@string/title_activity_choose_pizza"
            android:theme="@style/Theme.DesafioPizzaria.NoActionBar" />
        <activity android:name="Activitys.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>